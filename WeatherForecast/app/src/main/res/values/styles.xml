<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DetailsTheme" parent="Theme.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>
    <style name="HorizontalBar">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorUnselected</item>
        <item name="android:textColor">@color/colorOptionText</item>
    </style>
</resources>
