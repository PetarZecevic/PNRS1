<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DetailsTheme" parent="Theme.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>
    <style name="DataTheme" parent="Theme.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">15sp</item>
    </style>
    <style name="HorizontalBar">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorUnselected</item>
        <item name="android:textColor">@color/colorOptionText</item>
    </style>
    <style name="UpdateTheme">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorUpdate</item>
    </style>
    <style name="StatsButtonTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorStats</item>
    </style>
    <style name="StatsHeaderTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="StatsTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
